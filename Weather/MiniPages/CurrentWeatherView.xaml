<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Weather.Resources"
             x:Class="Weather.MiniPages.CurrentWeatherView">
    <Grid  BackgroundColor="LightSlateGrey">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" FontAttributes="Bold" Text="{x:Static res:AppRes.Current}" Margin="10" FontSize="Large"/>

        <Label Grid.Row="1" Grid.Column="0" VerticalTextAlignment="Center" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentTemperature}" Margin="10"/>
        <Label Grid.Row="2" Grid.Column="0" VerticalTextAlignment="Center" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentHumidity}" Margin="10"/>
        <Label Grid.Row="3" Grid.Column="0" VerticalTextAlignment="Center" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentWind}" Margin="10"/>
        <Label Grid.Row="4" Grid.Column="0" VerticalTextAlignment="Center" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentWindGust}" Margin="10"/>

        <Label Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="End" FontAttributes="Bold" Text="{Binding Temperature}" Margin="10"/>
        <Label Grid.Row="2" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="End" FontAttributes="Bold" Text="{Binding RelativeHumidity}" Margin="10"/>
        <Label Grid.Row="3" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="End" FontAttributes="Bold" Text="{Binding WindSpeed}" Margin="10"/>
        <Label Grid.Row="4" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="End" FontAttributes="Bold" Text="{Binding WindGust}" Margin="10"/>
    </Grid>
</ContentView>
