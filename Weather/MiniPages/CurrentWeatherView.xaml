<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:Weather.Resources"
             x:Class="Weather.MiniPages.CurrentWeatherView">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" FontAttributes="Bold" Text="{x:Static res:AppRes.Current}"/>

        <Label Grid.Row="1" Grid.Column="0" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentTemperature}"/>
        <Label Grid.Row="2" Grid.Column="0" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentHumidity}"/>
        <Label Grid.Row="3" Grid.Column="0" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentWind}"/>
        <Label Grid.Row="4" Grid.Column="0" HorizontalOptions="Start" Text="{x:Static res:AppRes.CurrentWindGust}"/>

        <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="End" Text="{Binding Temperature}"/>
        <Label Grid.Row="2" Grid.Column="1" HorizontalOptions="End" Text="{Binding RelativeHumidity}"/>
        <Label Grid.Row="3" Grid.Column="1" HorizontalOptions="End" Text="{Binding WindSpeed}"/>
        <Label Grid.Row="4" Grid.Column="1" HorizontalOptions="End" Text="{Binding WindGust}"/>
    </Grid>
</ContentView>
